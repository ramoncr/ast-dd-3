<h1>{{title}}</h1>
<h4>{{publishedDate}}</h4>
<p>{{{content}}}</p>

<div class="row">
  <div class="col">
    <h1>Invoices</h1>

  </div>
  <div class="col-4">
    <form action="/invoice/search" method="POST">
      <div class="input-group mb-3">
        <input
          type="text"
          class="form-control"
          placeholder="Search for invoices"
          name="searchText"
          value="{{searchText}}"
        />
        <button
          class="btn btn-outline-secondary"
          type="submit"
          id="button-search-invoices"
        >Search</button>
      </div>
    </form>
  </div>
</div>

<table style="width: 100%;" class="table">
  <thead>
    <tr style="font-weight: 600;">
      <td>ID</td>
      <td>Name</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    {{#each invoices}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td><a href="/invoice/{{this.id}}">Open</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>